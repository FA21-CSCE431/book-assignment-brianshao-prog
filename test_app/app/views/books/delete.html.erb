<h1>Deleting Book</h1>

<%= form_for(@book, :method => 'delete') do |f| %>
    <p>Are you sure you want to permanently delete:</p>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
          <th>Author</th>
          <th colspan="3"></th>
          <th>Price</th>
          <th colspan="3"></th>
          <th>Published</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <td><%= @book.title %></td>
        <th colspan="3"></th>
        <td><%= @book.author %></td>
        <th colspan="3"></th>
        <td>$ <%= @book.price %></td>
        <th colspan="3"></th>
        <td><%= @book.published_date %></td>
        <th colspan="3"></th>
      </tbody>
    </table>

    <div class="form-buttons">
      <%= f.submit("Delete Subject")%>
    </div>

<% end %>

<%= link_to 'Back', books_path %>